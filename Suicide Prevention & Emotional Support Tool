<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
const { jsPDF } = window.jspdf;

function showSupport(){
  const msg = `
<strong>You are not broken.</strong><br><br>
What you are experiencing is pain — not a failure.
Feelings can convince us that things will never change,
but feelings are not permanent truths.<br><br>

You have already shown strength by staying here and reflecting.
Reaching out for support is not weakness — it is a step toward relief.
If possible, consider sharing how you feel with one trusted person today.<br><br>

Your life has value even on days when it does not feel that way.
You deserve care, understanding, and time.
`;
  const box=document.getElementById("result");
  box.innerHTML=msg;
  box.style.display="block";
}

function resetTool(){
  document.querySelectorAll("textarea").forEach(t=>t.value="");
  document.getElementById("result").style.display="none";
}

function downloadPDF(){
  const doc=new jsPDF({unit:'pt',format:'a4'});
  let y=60,left=40,max=515;

  doc.setFontSize(11);
  doc.text("https://emotionalintelligencedeveloper.com/", left, 30);

  doc.setFontSize(18);
  doc.text("You Matter — Personal Reflection", left, y); y+=30;

  const qs=[
    "What has been weighing on you:",
    "Emotions you are feeling:",
    "What has helped before:",
    "What you would tell someone you love:",
    "One reason to stay today:"
  ];
  const as=[
    q1.value,q2.value,q3.value,q4.value,q5.value
  ];

  doc.setFontSize(12);
  for(let i=0;i<qs.length;i++){
    doc.text(doc.splitTextToSize(qs[i],max),left,y); y+=18;
    doc.text(doc.splitTextToSize(as[i]||"(not written)",max),left+10,y); y+=24;
  }

  doc.setFontSize(11);
  const closing=
  "If you are struggling, please consider reaching out to a trusted person or local support service. " +
  "You deserve help, compassion, and time to heal.";
  doc.text(doc.splitTextToSize(closing,max),left,y+10);

  doc.setFontSize(10);
  doc.text(
    "Created by Emotional Intelligence Developer — https://emotionalintelligencedeveloper.com/",
    left,
    800
  );

  doc.save("you-matter-reflection.pdf");
}
</script>
